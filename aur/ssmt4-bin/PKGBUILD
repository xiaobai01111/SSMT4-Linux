pkgname=ssmt4-bin
pkgver=0.0.6_beta
pkgrel=1
pkgdesc="SSMT4 Linux launcher"
arch=('x86_64')
url='https://github.com/xiaobai01111/SSMT4-Linux'
license=('MIT')
provides=('ssmt4')
conflicts=('ssmt4' 'ssmt4-git')
depends=('gtk3' 'webkit2gtk-4.1' 'libsoup3' 'xdg-utils')
optdepends=(
  'xorg-xwayland: XWayland support'
  'wine: Windows game compatibility'
  'winetricks: Wine helper scripts'
  'libayatana-appindicator: tray icon support'
)

_upstream_ver="${pkgver//_/-}"
source=(
  "ssmt4-bin-${pkgver}-${pkgrel}-x86_64.pkg.tar.zst::https://github.com/xiaobai01111/SSMT4-Linux/releases/download/v${_upstream_ver}/ssmt4-bin-${pkgver}-${pkgrel}-x86_64.pkg.tar.zst"
)
sha256sums=('SKIP')

package() {
  bsdtar -xpf "${srcdir}/ssmt4-bin-${pkgver}-${pkgrel}-x86_64.pkg.tar.zst" -C "${pkgdir}"
}
